<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    >

    <ImageView
        android:id="@+id/EventAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/avatar_boy"
        />

    <TextView
        android:gravity="center"
        android:textAlignment="center"
        android:text="EventName"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/EventName"
        android:textSize="18dp"
        android:textColor="@color/whitesmoke"
        android:layout_weight="66.6"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="33.3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="EventCreator"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="@color/whitesmoke"
                android:id="@+id/EventCreator"/>

            <TextView
                android:gravity="center"
                android:text="EventDate"
                android:layout_marginTop="-6dp"
                android:layout_width="match_parent"
                android:lineHeight="13dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="@color/whitesmoke"
                android:id="@+id/EventDate"
                />

        </LinearLayout>

        <TextView
            android:gravity="center"
            android:text="EventDetails"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="15dp"
            android:textColor="@color/whitesmoke"
            android:id="@+id/EventDetails"
            android:layout_below="@+id/EventCreator"/>
    </LinearLayout>

</LinearLayout>